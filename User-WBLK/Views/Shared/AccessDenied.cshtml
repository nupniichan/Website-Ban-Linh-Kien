@{
    ViewBag.Title = "Không có quyền truy cập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50">
    <div class="max-w-md w-full mx-4">
        <div class="bg-white p-8 rounded-lg shadow-sm border border-gray-100">
            <!-- Simple Icon -->
            <div class="mb-8 flex justify-center">
                <div class="w-16 h-16 bg-blue-50 rounded-full flex items-center justify-center">
                    <svg class="w-8 h-8 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" 
                              stroke-linejoin="round" 
                              stroke-width="2" 
                              d="M12 15v2m0 2h.01M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z" />
                </svg>
                </div>
            </div>

            <!-- Content -->
            <div class="text-center mb-8">
                <h1 class="text-2xl font-semibold text-gray-800 mb-2">Không thể truy cập</h1>
                <p class="text-gray-600">Bạn cần đăng nhập để truy cập trang này</p>
            </div>

            <!-- Actions -->
            <div class="space-y-3">
                <button onclick="showLoginPopup()" 
                        class="w-full bg-blue-400 text-white px-4 py-3 rounded-lg hover:bg-blue-500 transition-colors duration-200">
                    Đăng nhập
                </button>
                <button onclick="window.history.back()" 
                        class="w-full bg-gray-50 text-gray-700 px-4 py-3 rounded-lg hover:bg-gray-100 transition-colors duration-200">
                    Quay lại
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    function showLoginPopup() {
        const loginPopup = document.getElementById('loginPopup');
        if (loginPopup) {
            loginPopup.classList.remove('hidden');
            loginPopup.classList.add('flex');
        }
    }
</script> 