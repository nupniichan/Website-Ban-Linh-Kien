                    </div>
                </div>
            </div>
        </nav>

        <!-- Navigation Bar-->
        <nav class="bg-[#1266A6] border-t border-white/20">
            <div class="container mx-auto px-4 md:px-8 lg:px-32">
                <div class="flex items-center py-4 md:h-12">
                    <!-- Category Menu -->
                    <partial name="_CategoryMenu" />

                    <!-- Scrollable Navigation Links (Mobile only) -->
                    <div class="flex items-center space-x-6 md:space-x-16 ml-6 text-white text-sm font-bold">
