<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Website_Ban_Linh_Kien</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.icons8.com/">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Website_Ban_Linh_Kien.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)

    <script type="importmap"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/sidebar.js" asp-append-version="true"></script>
    <script src="~/js/login.js" asp-append-version="true"></script>
    <script src="~/js/register.js" asp-append-version="true"></script>
</head>
<body>
    <header>
        <nav class="bg-[#3182CE] py-3">
            <div class="container mx-auto px-4 md:px-8 lg:px-32">
                <div class="flex flex-col md:flex-row md:items-center md:justify-between space-y-4 md:space-y-0">
                    <!-- Mobile header -->
                    <div class="flex items-center space-x-3 md:hidden">
                        <div class="flex items-center space-x-2">
                            <button id="mobileMenuBtn" class="text-white">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                                </svg>
                            </button>
                            <a href="/" class="text-white text-xl font-bold">BPT</a>
                        </div>

                        <!-- Search bar -->
                        <div class="flex-1">
                            <div class="relative flex w-full">
                                <input type="search" 
                                       placeholder="Tìm kiếm" 
                                       class="w-full px-3 py-1.5 rounded-lg focus:outline-none text-sm">
                                <button class="absolute right-2 top-1/2 -translate-y-1/2">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 text-gray-500">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
                                    </svg>
                                </button>
                            </div>
                        </div>

                        <!-- Cart -->
                        <a href="/cart" class="text-white">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 0 0-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 0 0-16.536-1.84M7.5 14.25 5.106 5.272M6 20.25a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Zm12.75 0a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Z" />
                            </svg>
                        </a>
                    </div>

                    <!-- Desktop header -->
                    <div class="hidden md:block">
                        <a href="/" class="text-white text-2xl font-bold">BPT</a>
                    </div>
                    
                    <!-- Desktop search bar -->
                    <div class="hidden md:flex flex-1 mx-8">
                        <div class="relative flex w-full">
                            <input type="search" 
                                   placeholder="Bạn cần tìm gì?" 
                                   class="w-full px-4 py-2 rounded-lg focus:outline-none">
                            <button class="absolute right-2 top-1/2 -translate-y-1/2">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-500">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
                                </svg>
                            </button>
                        </div>
                    </div>

                    <!-- Desktop Navigation Items -->
                    <div class="hidden md:flex md:items-center space-x-8">
                        <a href="/build" class="text-white text-center">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mx-auto">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M9 17.25v1.007a3 3 0 0 1-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0 1 15 18.257V17.25m6-12V15a2.25 2.25 0 0 1-2.25 2.25H5.25A2.25 2.25 0 0 1 3 15V5.25m18 0A2.25 2.25 0 0 0 18.75 3H5.25A2.25 2.25 0 0 0 3 5.25m18 0V12a2.25 2.25 0 0 1-2.25 2.25H5.25A2.25 2.25 0 0 1 3 12V5.25" />
                            </svg>
                            <span class="text-sm font-bold">Xây dựng cấu hình</span>
                        </a>

                        <a href="/cart" class="text-white text-center">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mx-auto">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 0 0-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 0 0-16.536-1.84M7.5 14.25 5.106 5.272M6 20.25a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Zm12.75 0a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Z" />
                            </svg>
                            <span class="text-sm font-bold">Giỏ hàng</span>
                        </a>

                        <a href="/contact" class="text-white text-center">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mx-auto">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" />
                            </svg>
                            <span class="text-sm font-bold">Liên hệ</span>
                        </a>

                        <a href="/Login" class="text-white text-center">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mx-auto">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0 0 12 15.75a7.488 7.488 0 0 0-5.982 2.975m11.963 0a9 9 0 1 0-11.963 0m11.963 0A8.966 8.966 0 0 1 12 21a8.966 8.966 0 0 1-5.982-2.275M15 9.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                            </svg>
                            <span class="text-sm font-bold">Tài khoản</span>
                        </a>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Navigation Bar-->
        <nav class="bg-[#1266A6] border-t border-white/20">
            <div class="container mx-auto px-4 md:px-8 lg:px-32">
                <div class="flex items-center py-4 md:h-12">
                    <!-- Category Menu -->
                    <partial name="_CategoryMenu" />

                    <!-- Scrollable Navigation Links (Mobile only) -->
                    <div class="flex items-center space-x-6 md:space-x-16 ml-6 text-white text-sm font-bold">
                        <a href="/pc" class="flex items-center hover:text-white/80 space-x-2 whitespace-nowrap">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M9 17.25v1.007a3 3 0 0 1-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0 1 15 18.257V17.25m6-12V15a2.25 2.25 0 0 1-2.25 2.25H5.25A2.25 2.25 0 0 1 3 15V5.25m18 0A2.25 2.25 0 0 0 18.75 3H5.25A2.25 2.25 0 0 0 3 5.25m18 0V12a2.25 2.25 0 0 1-2.25 2.25H5.25A2.25 2.25 0 0 1 3 12V5.25" />
                            </svg>
                            <span>PC</span>
                        </a>

                        <a href="/laptop" class="flex items-center hover:text-white/80 space-x-2">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-1">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M3 17.25h18M5.25 3.75h13.5a2.25 2.25 0 0 1 2.25 2.25v9.75H3V6a2.25 2.25 0 0 1 2.25-2.25zM3 19.5h18a2.25 2.25 0 0 1 2.25 2.25v.75H.75v-.75a2.25 2.25 0 0 1 2.25-2.25z" />
                            </svg>
                            <span class="mx-1">Laptop</span>
                        </a>


                        <a href="/components" class="flex items-center space-x-2 hover:text-white/80">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 3v1.5M4.5 8.25H3m18 0h-1.5M4.5 12H3m18 0h-1.5m-15 3.75H3m18 0h-1.5m0 15V21m3.75-18v1.5m0 15V21m-9-1.5h10.5a2.25 2.25 0 0 0 2.25-2.25V6.75a2.25 2.25 0 0 0-2.25-2.25H6.75A2.25 2.25 0 0 0 4.5 6.75v10.5a2.25 2.25 0 0 0 2.25 2.25Zm.75-12h9v9h-9v-9Z" />
                            </svg>
                            <span class="my-auto">Linh kiện PC</span>
                        </a>

                        <a href="/monitors" class="flex items-center space-x-2 hover:text-white/80">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M9 17.25v1.007a3 3 0 0 1-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0 1 15 18.257V17.25m6-12V15a2.25 2.25 0 0 1-2.25 2.25H5.25A2.25 2.25 0 0 1 3 15V5.25m18 0A2.25 2.25 0 0 0 18.75 3H5.25A2.25 2.25 0 0 0 3 5.25m18 0V12a2.25 2.25 0 0 1-2.25 2.25H5.25A2.25 2.25 0 0 1 3 12V5.25" />
                            </svg>
                            <span class="my-auto">Màn hình</span>
                        </a>

                        <a href="/audio" class="flex items-center space-x-1 hover:text-white/80">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M19.114 5.636a9 9 0 0 1 0 12.728M16.463 8.288a5.25 5.25 0 0 1 0 7.424M6.75 8.25l4.72-4.72a.75.75 0 0 1 1.28.53v15.88a.75.75 0 0 1-1.28.53l-4.72-4.72H4.51c-.88 0-1.704-.507-1.938-1.354A9.009 9.009 0 0 1 2.25 12c0-.83.112-1.633.322-2.396C2.806 8.756 3.63 8.25 4.51 8.25H6.75Z" />
                            </svg>
                            <span class="my-auto">Thiết bị âm thanh</span>
                        </a>

                        <a href="/others" class="flex items-center space-x-1 hover:text-white/80">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M6.429 9.75 2.25 12l4.179 2.25m0-4.5 5.571 3 5.571-3m-11.142 0L2.25 7.5 12 2.25l9.75 5.25-4.179 2.25m0 0L21.75 12l-4.179 2.25m0 0 4.179 2.25L12 21.75 2.25 16.5l4.179-2.25m11.142 0-5.571 3-5.571-3" />
                            </svg>
                            <span class="my-auto">Các thiết bị khác</span>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <!-- Mọi content đều vứt vào đây hết rồi nó sẽ kế thừa khỏi phải gọi lại-->
            @RenderBody()
        </main>
    </div>

    <footer class="border-t mt-8">
        <div class="container mx-auto px-4 md:px-8 lg:px-32 py-8">
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
                <div class="text-center sm:text-left">
                    <a href="/" class="text-2xl md:text-3xl font-bold">BPT</a>
                </div>

                <div class="text-center sm:text-left">
                    <h3 class="font-bold text-lg mb-4">Tìm hiểu thêm</h3>
                    <ul class="space-y-2">
                        <li><a href="#" class="hover:text-blue-600">Về chúng tôi</a></li>
                        <li><a href="#" class="hover:text-blue-600">Riêng tư</a></li>
                        <li><a href="#" class="hover:text-blue-600">Điều khoản</a></li>
                        <li><a href="#" class="hover:text-blue-600">Liên hệ</a></li>
                    </ul>
                </div>

                <div class="text-center sm:text-left">
                    <h3 class="font-bold text-lg mb-4">Tra cứu thông tin</h3>
                    <ul class="space-y-2">
                        <li><a href="#" class="hover:text-blue-600">Hóa đơn</a></li>
                        <li><a href="#" class="hover:text-blue-600">Ưu đãi</a></li>
                        <li><a href="#" class="hover:text-blue-600">Bảo hành</a></li>
                    </ul>
                </div>

                <div class="space-y-8 text-center sm:text-left">
                    <div>
                        <h3 class="font-bold text-lg mb-4">Liên hệ với chúng tôi</h3>
                        <p>Hotline: 123-456-7</p>
                        <p>Fax: 123-456-7</p>
                    </div>
                    
                    <div>
                        <h3 class="font-bold text-lg mb-4">Mạng xã hội</h3>
                        <div class="flex justify-center sm:justify-start space-x-4">
                            <a href="#" class="hover:text-blue-600 transition-colors">
                                <i class="fab fa-facebook-f text-xl"></i>
                            </a>
                            <a href="#" class="hover:text-blue-600 transition-colors">
                                <i class="fab fa-instagram text-xl"></i>
                            </a>
                            <a href="#" class="hover:text-blue-600 transition-colors">
                                <i class="fab fa-twitter text-xl"></i>
                            </a>
                            <a href="#" class="hover:text-blue-600 transition-colors">
                                <i class="fab fa-youtube text-xl"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="text-center mt-8 pt-8 border-t">
                <p class="text-sm md:text-base">2025 - Nhóm 4</p>
            </div>
        </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)


    <!-- Các phần khác (ví dụ: sidebar, overlay, ...) -->
    <!-- Mobile Sidebar Menu -->
    <div id="mobileSidebar" class="fixed inset-y-0 left-0 w-64 bg-white transform -translate-x-full transition-transform duration-300 ease-in-out z-50">
        <div class="bg-[#3182CE] p-4">
            <div class="flex justify-between items-center">
                <h2 class="text-xl font-bold text-white">Danh mục</h2>
                <button id="closeSidebarBtn" class="text-white">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
        </div>

        <div class="p-4 space-y-4">
            <a href="/build" class="flex items-center space-x-3 text-gray-700 hover:text-blue-600">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 17.25v1.007a3 3 0 0 1-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0 1 15 18.257V17.25m6-12V15a2.25 2.25 0 0 1-2.25 2.25H5.25A2.25 2.25 0 0 1 3 15V5.25m18 0A2.25 2.25 0 0 0 18.75 3H5.25A2.25 2.25 0 0 0 3 5.25m18 0V12a2.25 2.25 0 0 1-2.25 2.25H5.25A2.25 2.25 0 0 1 3 12V5.25" />
                </svg>
                <span>Xây dựng cấu hình</span>
            </a>

            <a href="/contact" class="flex items-center space-x-3 text-gray-700 hover:text-blue-600">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" />
                </svg>
                <span>Liên hệ</span>
            </a>

            <a href="/account" class="flex items-center space-x-3 text-gray-700 hover:text-blue-600">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0 0 12 15.75a7.488 7.488 0 0 0-5.982 2.975m11.963 0a9 9 0 1 0-11.963 0m11.963 0A8.966 8.966 0 0 1 12 21a8.966 8.966 0 0 1-5.982-2.275M15 9.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                </svg>
                <span>Tài khoản</span>
            </a>
        </div>
    </div>

    <!-- Login Popup -->
    <partial name="_LoginPopup" />

    <!-- Register Popup -->
    <partial name="_RegisterPopup" />
    
    <!-- Overlay (Khi mở sidebar lên thì background phía sau nó mờ đi-->
    <div id="sidebarOverlay" class="fixed inset-0 bg-black opacity-0 pointer-events-none transition-opacity duration-300 ease-in-out z-40"></div>

</body>
</html>
