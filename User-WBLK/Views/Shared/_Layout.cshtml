<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Website_Ban_Linh_Kien</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.icons8.com/">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Website_Ban_Linh_Kien.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)

    <script type="importmap"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/sidebar.js" asp-append-version="true"></script>
    <script src="~/js/login.js" asp-append-version="true"></script>
    <script src="~/js/register.js" asp-append-version="true"></script>
</head>
<body>
    <!-- Header -->
    <partial name="_Header" />
    
    <div class="container">
        <main role="main" class="pb-3 mx-auto px-4 md:px-8 lg:px-32">
            <!-- Mọi content đều vứt vào đây hết rồi nó sẽ kế thừa khỏi phải gọi lại-->
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <partial name="_Footer" />
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Các mục khác -->
    <!-- Login Popup -->
    <partial name="_LoginPopup" />

    <!-- Register Popup -->
    <partial name="_RegisterPopup" />

    <!-- Overlay (Khi mở sidebar lên thì background phía sau nó mờ đi-->
    <div id="sidebarOverlay" class="fixed inset-0 bg-black opacity-0 pointer-events-none transition-opacity duration-300 ease-in-out z-40"></div>

</body>
</html>
