            for (int i = 0; i < 5; i++)
            {
                var (name, price, image) = sampleProducts[i];
                var productCard = new ProductCardViewModel
                {
                    Id = $"product-{i}",
                    Name = name,
                    Category = Model.Category,
                    Price = price,
                    ImageUrl = image,
                    Description = $"Mô tả chi tiết cho {name}"
