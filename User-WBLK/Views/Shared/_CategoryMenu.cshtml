<script>
function buildFilterUrl(baseUrl, newParams) {
    // Lấy tất cả các tham số hiện tại từ URL
    const currentParams = new URLSearchParams(window.location.search);
    const params = new URLSearchParams();

    // Giữ lại các tham số lọc hiện tại
    ['usage', 'cpuType', 'ram', 'gpu', 'priceRange'].forEach(param => {
        if (currentParams.has(param)) {
            params.set(param, currentParams.get(param));
        }
    });

    // Thêm/cập nhật các tham số mới
    Object.entries(newParams).forEach(([key, value]) => {
        if (value) {
            params.set(key, value);
        }
    });

    // Tạo URL mới
    return `${baseUrl}?${params.toString()}`;
}

// Hàm mới để xử lý điều hướng với tham số
function navigateWithParams(action, controller, newParams) {
    // Tạo URL cơ bản
    const baseUrl = `/${controller}/${action}`;
    
    // Kiểm tra xem người dùng đang ở trang nào
    const currentPath = window.location.pathname.toLowerCase();
    const currentAction = currentPath.split('/').pop();
    
    // Tạo đối tượng URLSearchParams mới
    const params = new URLSearchParams();
    
    // Nếu đang chuyển sang danh mục khác, không giữ lại tham số cũ
    if (currentAction.toLowerCase() !== action.toLowerCase()) {
        // Chỉ thêm các tham số mới
        Object.entries(newParams).forEach(([key, value]) => {
            if (value) {
                params.set(key, value);
            }
        });
    } else {
        // Nếu vẫn ở cùng danh mục, giữ lại các tham số hiện tại
        const currentParams = new URLSearchParams(window.location.search);
        
        // Sao chép tất cả tham số hiện tại
        currentParams.forEach((value, key) => {
            params.set(key, value);
        });
        
        // Cập nhật/thêm các tham số mới
        Object.entries(newParams).forEach(([key, value]) => {
            if (value) {
                params.set(key, value);
            }
        });
    }
    
    // Chuyển hướng đến URL mới với tham số đã chọn
    window.location.href = `${baseUrl}?${params.toString()}`;
}

// Áp dụng cho tất cả các link trong menu
document.addEventListener('DOMContentLoaded', function() {
    const menuLinks = document.querySelectorAll('#categoryDropdown a');
    menuLinks.forEach(link => {
        const href = link.getAttribute('href');
        if (href && href.includes('ProductsList') && !href.includes('javascript:void(0)')) {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                const url = new URL(href, window.location.origin);
                const newParams = {};
                url.searchParams.forEach((value, key) => {
                    newParams[key] = value;
                });
                window.location.href = buildFilterUrl(url.pathname, newParams);
            });
        }
    });
});
