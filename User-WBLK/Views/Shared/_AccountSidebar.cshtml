<script>
    function handleLogout() {
        fetch('/Login/Logout', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded'
            }
        })
        .then(response => {
            if (response.ok) {
                // Chuyển về trang chủ sau khi đăng xuất
                window.location.href = '/';
            }
        })
        .catch(error => console.error('Error:', error));
    }
</script>