        <div class=" bg-white shadow-lg rounded-lg p-4">
            <div class="border-b pb-4 mb-4">
                <h2 class="text-xl font-bold">Menu</h2>
            </div>
            <ul class="space-y-3">
                <li>
                    <a href="/account" 
                       class="block py-2 px-4 rounded-md font-medium shadow hover:bg-gray-200 @(ViewBag.CurrentTab == "Profile" ? "bg-gray-100 text-gray-700" : "bg-white text-gray-600")">
                        Thông tin tài khoản
                    </a>
                </li>
                <li>
                    <a href="/account/orderHistory" 
                       class="block py-2 px-4 rounded-md font-medium shadow hover:bg-gray-200 @(ViewBag.CurrentTab == "OrderHistory" ? "bg-blue-500 text-white" : "bg-white text-gray-600")">
