@{
    ViewBag.Title = "OrderHistory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="flex flex-col h-auto bg-white">
    <!-- Add space below the navbar -->
    <div class="h-16"></div>

    <div class="flex flex-1 max-w-screen-xl mx-auto">
        <!-- Sidebar -->
        <div class=" bg-white shadow-lg rounded-lg p-4">
            <div class="border-b pb-4 mb-4">
                <h2 class="text-xl font-bold">Menu</h2>
            </div>
            <ul class="space-y-3">
                <li>
                    <a href="/account" class="block py-2 px-4 bg-gray-100 text-gray-700 rounded-md font-medium shadow hover:bg-gray-200">Thông tin tài khoản</a>
                </li>
                <li>
                    <a href="/account/orderHistory" class="block py-2 px-4 bg-blue-500 text-white rounded-md font-medium shadow hover:bg-blue-600">Lịch sử giao dịch</a>
                </li>
            </ul>
            <div class="mt-8">
                <button class="bg-red-500 w-full text-white py-2 rounded-md font-medium shadow hover:bg-red-600">Đăng Xuất</button>
            </div>
        </div>

        <!-- Content -->
        <div class="w-[638px] flex-1 bg-white shadow-lg rounded-lg p-6 ml-6">
            <h1 class="text-2xl font-bold mb-6">Lịch sử giao dịch</h1>

            <!-- Orders List -->
            <div class="grid grid-cols-1 gap-4">
                <!-- Order Plate -->
                <div class="bg-gray-50 p-3 rounded-lg shadow-md h-13 flex items-center">
                    <h2 class="text-lg font-bold">Order #12345</h2>
                    <div class="ml-auto">
                        <p class="text-sm text-gray-600">Ngày đặt hàng: 2025-01-01</p>
                        <p class="text-sm text-gray-600">Trạng thái: Hoàn tất</p>
                    </div>
                </div>
                <div class="bg-gray-50 p-3 rounded-lg shadow-md h-13 flex items-center">
                    <h2 class="text-lg font-bold">Order #12346</h2>
                    <div class="ml-auto">
                        <p class="text-sm text-gray-600">Ngày đặt hàng: 2025-01-02</p>
                        <p class="text-sm text-gray-600">Trạng thái: Đang xử lý</p>
                    </div>
                </div>
                <div class="bg-gray-50 p-3 rounded-lg shadow-md h-13 flex items-center">
                    <h2 class="text-lg font-bold">Order #12347</h2>
                    <div class="ml-auto">
                        <p class="text-sm text-gray-600">Ngày đặt hàng: 2025-01-03</p>
                        <p class="text-sm text-gray-600">Trạng thái: Đã hủy</p>
                    </div>
                </div>
            </div>

            <!-- Pagination -->
            <div class="flex justify-between items-center mt-6">
                <button class="bg-gray-200 text-gray-600 px-4 py-2 rounded-md shadow hover:bg-gray-300">← Trước</button>
                <div class="space-x-2">
                    <button class="bg-blue-500 text-white px-4 py-2 rounded-md shadow">1</button>
                    <button class="bg-gray-200 text-gray-600 px-4 py-2 rounded-md shadow hover:bg-gray-300">2</button>
                    <button class="bg-gray-200 text-gray-600 px-4 py-2 rounded-md shadow hover:bg-gray-300">3</button>
                </div>
                <button class="bg-gray-200 text-gray-600 px-4 py-2 rounded-md shadow hover:bg-gray-300">Tiếp →</button>
            </div>
        </div>
    </div>
</div>
