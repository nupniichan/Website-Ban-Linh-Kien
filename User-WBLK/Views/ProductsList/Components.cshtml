                                var isSelected = Model.Brand == brand.Value;
                                <option value="@url" selected="@isSelected">@brand.Text</option>
                            }
                        </select>

                        <!-- Memory Filter -->
                        <select id="memory" class="px-4 py-2 border rounded-md" onchange="window.location.href=this.value">
                            @{
