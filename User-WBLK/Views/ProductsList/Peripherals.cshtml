                break;

            case "webcam":
                <div class="space-y-4">
                    <div class="flex flex-wrap gap-2">
                        <!-- Webcam Brand Filter -->
                        <select id="brand" class="px-4 py-2 border rounded-md" onchange="window.location.href=this.value">
                            @{
                                var webcamBrands = new[] {
                                    new { Value = "", Text = "Tất cả thương hiệu" },
