@model Admin_WBLK.Models.Doitradh

@{
    ViewData["Title"] = "Chỉnh sửa Yêu Cầu Đổi Trả";
}

<div class="p-6 w-full h-full bg-gray-50">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="mb-6">
            <h1 class="text-3xl font-bold text-gray-900">Chỉnh sửa Yêu Cầu Đổi Trả</h1>
            <p class="mt-2 text-sm text-gray-600">Cập nhật thông tin cho yêu cầu đổi trả.</p>
        </div>

        <!-- Card chứa form -->
        <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
            <form asp-action="Edit" method="post" class="w-full h-full">
                <div asp-validation-summary="ModelOnly" class="mb-4 p-4 rounded-lg bg-red-50 text-red-500"></div>

                <!-- Form grid layout -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Mã Yêu Cầu -->
                    <div>
                        <label asp-for="Id" class="block text-sm font-medium text-gray-700 mb-1">Mã Yêu Cầu</label>
                        <input asp-for="Id" readonly class="w-full px-4 py-2 border border-gray-300 bg-gray-100 rounded-lg focus:outline-none" />
                        <span asp-validation-for="Id" class="text-red-500 text-sm mt-1"></span>
                    </div>

                    <!-- Dropdown Trạng Thái -->
                    <div>
                        <label asp-for="Trangthai" class="block text-sm font-medium text-gray-700 mb-1">Trạng Thái</label>
                        <select asp-for="Trangthai" asp-items="@(ViewData["TrangthaiList"] as IEnumerable<SelectListItem>)"
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none"></select>
                        <span asp-validation-for="Trangthai" class="text-red-500 text-sm mt-1"></span>
                    </div>



                    <!-- Lý Do -->
                    <div class="md:col-span-2">
                        <label asp-for="Lydo" class="block text-sm font-medium text-gray-700 mb-1">Lý Do</label>
                        <textarea asp-for="Lydo" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
                        <span asp-validation-for="Lydo" class="text-red-500 text-sm mt-1"></span>
                    </div>

                    <!-- Ghi Chú -->
                    <div class="md:col-span-2">
                        <label asp-for="Ghichu" class="block text-sm font-medium text-gray-700 mb-1">Ghi Chú</label>
                        <textarea asp-for="Ghichu" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
                        <span asp-validation-for="Ghichu" class="text-red-500 text-sm mt-1"></span>
                    </div>

                    <!-- Mã Khách Hàng -->
                    <div>
                        <label asp-for="IdKh" class="block text-sm font-medium text-gray-700 mb-1">Mã Khách Hàng</label>
                        <select asp-for="IdKh" asp-items="@(ViewData["IdKh"] as IEnumerable<SelectListItem>)" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none"></select>
                        <span asp-validation-for="IdKh" class="text-red-500 text-sm mt-1"></span>
                    </div>

                    <!-- Mã Nhân Viên -->
                    <div>
                        <label asp-for="IdNv" class="block text-sm font-medium text-gray-700 mb-1">Mã Nhân Viên</label>
                        <select asp-for="IdNv" asp-items="@(ViewData["IdNv"] as IEnumerable<SelectListItem>)" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none"></select>
                        <span asp-validation-for="IdNv" class="text-red-500 text-sm mt-1"></span>
                    </div>

                    <!-- Mã Đơn Hàng -->
                    <div>
                        <label asp-for="IdDh" class="block text-sm font-medium text-gray-700 mb-1">Mã Đơn Hàng</label>
                        <select asp-for="IdDh" asp-items="@(ViewData["IdDh"] as IEnumerable<SelectListItem>)" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none"></select>
                        <span asp-validation-for="IdDh" class="text-red-500 text-sm mt-1"></span>
                    </div>

                </div>

                <!-- Buttons -->
                <div class="mt-8 flex items-center justify-end gap-4">
                    <a asp-action="Index" class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-800 transition-colors">
                        Quay lại
                    </a>
                    <button type="submit" class="px-6 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors">
                        Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
