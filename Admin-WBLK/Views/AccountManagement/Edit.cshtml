@model Admin_WBLK.Models.Taikhoan

@{
    ViewData["Title"] = "Chỉnh sửa tài khoản";
}

<div class="p-6 w-full h-full bg-gray-50">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="mb-6">
            <h1 class="text-3xl font-bold text-gray-900">Chỉnh sửa tài khoản</h1>
            <p class="mt-2 text-sm text-gray-600">Cập nhật thông tin chi tiết tài khoản</p>
        </div>

        <!-- Card chứa form -->
        <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
            <form asp-action="Edit" method="post" class="w-full h-full">
                <input type="hidden" asp-for="IdTk" />
                <div asp-validation-summary="ModelOnly" class="mb-4 p-4 rounded-lg bg-red-50 text-red-500"></div>

                <!-- Grid layout cho các trường input -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Tên tài khoản - full width -->
                    <div class="md:col-span-2">
                        <label asp-for="Tentaikhoan" class="block text-sm font-medium text-gray-700 mb-1">Tên tài khoản</label>
                        <input asp-for="Tentaikhoan" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" required />
                        <span asp-validation-for="Tentaikhoan" class="text-red-500 text-sm mt-1"></span>
                    </div>

                    <!-- Mật khẩu -->
                    <div>
                        <label asp-for="Matkhau" class="block text-sm font-medium text-gray-700 mb-1">Mật khẩu (để trống nếu không muốn thay đổi)</label>
                        <input asp-for="Matkhau" type="password" 
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" 
                            placeholder="Để trống nếu không thay đổi" 
                            data-val="false" />
                        <span asp-validation-for="Matkhau" class="text-red-500 text-sm mt-1"></span>

                    </div>



                    <!-- Quyền truy cập -->
                    <div>
                        <label asp-for="Quyentruycap" class="block text-sm font-medium text-gray-700 mb-1">Quyền truy cập</label>
                        <select asp-for="Quyentruycap" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" required>
                            <option value="">Chọn quyền truy cập</option>
                            <option value="Admin">Quản trị viên</option>
                            <option value="NhanVienKho">Nhân viên kho</option>
                            <option value="NhanVienKinhDoanh">Nhân viên kinh doanh</option>
                            <option value="NhanVienMarketing">Nhân viên marketing</option>
                            <option value="KhachHang">Khách hàng</option>
                        </select>
                        <span asp-validation-for="Quyentruycap" class="text-red-500 text-sm mt-1"></span>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="mt-8 flex items-center justify-end gap-4">
                    <a asp-action="Index" class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-800 transition-colors">
                        Quay lại
                    </a>
                    <button type="submit" class="px-6 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors">
                        Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
