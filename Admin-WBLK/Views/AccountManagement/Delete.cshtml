@model Admin_WBLK.Models.Taikhoan

@{
    ViewData["Title"] = "Delete Account";
}

<h1 class="text-2xl font-bold mb-4">Delete Account</h1>

<hr class="mb-6" />

<div class="max-w-lg mx-auto">
    <h4 class="text-lg font-medium mb-4">Are you sure you want to delete this account?</h4>
    <div class="space-y-2">
        <p><strong>Username:</strong> @Html.DisplayFor(model => model.Tentaikhoan)</p>
        <p><strong>Access Level:</strong> @Html.DisplayFor(model => model.Quyentruycap)</p>
    </div>

    <hr class="my-6" />

    <form asp-action="Delete" class="space-y-4">
        <input type="hidden" asp-for="IdTk" />
        <div class="flex items-center justify-between">
            <button type="submit" class="px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500">Delete</button>
            <a asp-action="Index" class="text-gray-700 hover:underline text-sm">Cancel</a>
        </div>
    </form>
</div>
