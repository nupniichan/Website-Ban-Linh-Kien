@model Admin_WBLK.Models.Khachhang

@{
    ViewData["Title"] = "Chi tiết khách hàng";
}

<div class="p-6 w-full h-full bg-gray-50">
    <div class="max-w-3xl mx-auto">
        <h1 class="text-3xl font-bold text-gray-900 mb-6">Chi tiết khách hàng</h1>
        <div class="bg-white rounded-lg shadow-sm p-6">
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-4 gap-y-6">
                <div>
                    <dt class="text-sm font-medium text-gray-500">Mã khách hàng</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Model.IdKh</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">Tài khoản liên kết</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Model.IdTk</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">Họ tên</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Model.Hoten</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">Email</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Model.Email</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">Số điện thoại</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Model.Sodienthoai</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">Giới tính</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Model.Gioitinh</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">Ngày sinh</dt>
                    <dd class="mt-1 text-sm text-gray-900">@(Model.Ngaysinh?.ToString("dd/MM/yyyy"))</dd>
                </div>
                <div class="md:col-span-2">
                    <dt class="text-sm font-medium text-gray-500">Địa chỉ</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Model.Diachi</dd>
                </div>
            </dl>
            <div class="mt-6 flex justify-end gap-4">
                <a asp-action="Edit" 
                   asp-route-id="@Model.IdKh"
                   asp-route-returnUrl="@ViewData["ReturnUrl"]"
                   class="inline-flex items-center px-4 py-2 border border-yellow-600 text-sm font-medium rounded-md text-yellow-600 bg-white hover:bg-yellow-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                    Chỉnh sửa
                </a>

                @if (!string.IsNullOrEmpty(ViewData["ReturnUrl"]?.ToString()))
                {
                    <a href="@ViewData["ReturnUrl"]" 
                       class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        Quay lại
                    </a>
                }
                else
                {
                    <a asp-action="Index" 
                       class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        Quay lại
                    </a>
                }
            </div>
        </div>
    </div>
</div>
