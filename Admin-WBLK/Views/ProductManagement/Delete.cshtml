@model Admin_WBLK.Models.Sanpham

@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<div class="p-6 w-full h-full bg-gray-50">
    <div class="max-w-3xl mx-auto">
        <h1 class="text-3xl font-bold text-gray-900 mb-4">Xóa sản phẩm</h1>
        <div class="bg-yellow-50 border border-yellow-400 text-yellow-700 p-4 rounded-lg mb-6">
            <h3 class="font-medium">Bạn có chắc chắn muốn xóa sản phẩm này?</h3>
            <p class="mt-1 text-sm">Hành động này không thể hoàn tác.</p>
        </div>

        <div class="bg-white rounded-lg shadow-sm p-6">
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-4 gap-y-6">
                <div class="col-span-2">
                    <dt class="text-sm font-medium text-gray-500">Mã sản phẩm</dt>
                    <dd class="mt-1 text-lg text-gray-900">@Model.IdSp</dd>
                </div>

                <div class="col-span-2">
                    <dt class="text-sm font-medium text-gray-500">Tên sản phẩm</dt>
                    <dd class="mt-1 text-gray-900">@Model.TenSp</dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-500">Giá</dt>
                    <dd class="mt-1 text-gray-900">@Model.Gia.ToString("#,##0") VNĐ</dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-500">Số lượng tồn</dt>
                    <dd class="mt-1 text-gray-900">@Model.SoLuongTon</dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-500">Thương hiệu</dt>
                    <dd class="mt-1 text-gray-900">@Model.ThuongHieu</dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-500">Loại sản phẩm</dt>
                    <dd class="mt-1 text-gray-900">@Model.LoaiSp</dd>
                </div>

                <div class="col-span-2">
                    <dt class="text-sm font-medium text-gray-500">Mô tả</dt>
                    <dd class="mt-1 text-gray-900">@Html.Raw(Model.MoTa)</dd>
                </div>

                <div class="col-span-2">
                    <dt class="text-sm font-medium text-gray-500">Thông số kỹ thuật</dt>
                    <dd class="mt-1 text-gray-900">@Html.Raw(Model.ThongSoKyThuat)</dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-500">Nhân viên quản lý</dt>
                    <dd class="mt-1 text-gray-900">@Model.IdNvNavigation?.Hoten</dd>
                </div>

                @if (!string.IsNullOrEmpty(Model.hinh_anh))
                {
                    <div class="col-span-2">
                        <dt class="text-sm font-medium text-gray-500 mb-2">Hình ảnh sản phẩm</dt>
                        <dd>
                            <img src="@Model.hinh_anh" alt="@Model.TenSp" 
                                 class="w-48 h-48 object-cover rounded-lg border border-gray-200"/>
                        </dd>
                    </div>
                }
            </dl>

            <div class="mt-8 flex items-center justify-end gap-4">
                <a asp-action="Index" 
                   class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-800">
                    Quay lại
                </a>
                <form asp-action="Delete" class="inline">
                    <input type="hidden" asp-for="IdSp" />
                    <button type="submit" 
                            class="px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2">
                        Xác nhận xóa
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
