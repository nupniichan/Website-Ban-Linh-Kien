@model Admin_WBLK.Models.Nhanvien

@{
    ViewData["Title"] = "Chỉnh sửa nhân viên";
}

<div class="p-6 w-full h-full bg-gray-50">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="mb-6">
            <h1 class="text-3xl font-bold text-gray-900">Chỉnh sửa nhân viên</h1>
            <p class="mt-2 text-sm text-gray-600">Cập nhật thông tin chi tiết nhân viên</p>
        </div>

        <!-- Card containing the form -->
        <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
            <form asp-action="Edit" method="post" class="w-full h-full">
                <input type="hidden" asp-for="IdNv" />
                <div asp-validation-summary="ModelOnly" class="mb-4 p-4 rounded-lg bg-red-50 text-red-500"></div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Tên nhân viên -->
                    <div class="md:col-span-2">
                        <label asp-for="Hoten" class="block text-sm font-medium text-gray-700 mb-1">Tên nhân viên</label>
                        <input asp-for="Hoten" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" required />
                        <span asp-validation-for="Hoten" class="text-red-500 text-sm mt-1"></span>
                    </div>

                    <!-- Chức vụ -->
                    <div>
                        <label asp-for="Chucvu" class="block text-sm font-medium text-gray-700 mb-1">Chức vụ</label>
                        <select asp-for="Chucvu" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" required>
                            <option value="">Chọn chức vụ</option>
                            <option value="nhanvienkho">Nhân viên kho</option>
                            <option value="nhanvienkinhdoanh">Nhân viên kinh doanh</option>
                            <option value="nhanvienmarketing">Nhân viên marketing</option>
                        </select>
                        <span asp-validation-for="Chucvu" class="text-red-500 text-sm mt-1"></span>
                    </div>

                    <!-- Lương -->
                    <div>
                        <label asp-for="Luong" class="block text-sm font-medium text-gray-700 mb-1">Lương</label>
                        <input asp-for="Luong" type="number" step="0.01" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" required />
                        <span asp-validation-for="Luong" class="text-red-500 text-sm mt-1"></span>
                    </div>

                    <!-- Giới tính -->
                    <div>
                        <label asp-for="Gioitinh" class="block text-sm font-medium text-gray-700 mb-1">Giới tính</label>
                        <select asp-for="Gioitinh" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" required>
                            <option value="">Chọn giới tính</option>
                            <option value="Nam">Nam</option>
                            <option value="Nữ">Nữ</option>
                            <option value="Khác">Khác</option>
                        </select>
                        <span asp-validation-for="Gioitinh" class="text-red-500 text-sm mt-1"></span>
                    </div>

                    <!-- Số điện thoại -->
                    <div>
                        <label asp-for="Sodienthoai" class="block text-sm font-medium text-gray-700 mb-1">Số điện thoại</label>
                        <input asp-for="Sodienthoai" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" required />
                        <span asp-validation-for="Sodienthoai" class="text-red-500 text-sm mt-1"></span>
                    </div>

                    <!-- Email -->
                    <div>
                        <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                        <input asp-for="Email" type="email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" required />
                        <span asp-validation-for="Email" class="text-red-500 text-sm mt-1"></span>
                    </div>

                    <!-- Tài khoản (Account dropdown) -->
                    <div class="md:col-span-2">
                        <label asp-for="Idtk" class="block text-sm font-medium text-gray-700 mb-1">Tài khoản</label>
                        <select asp-for="Idtk" asp-items="ViewBag.Accounts" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors">
                            <option value="">-- Chọn tài khoản (nếu có) --</option>
                        </select>
                        <span asp-validation-for="Idtk" class="text-red-500 text-sm mt-1"></span>
                    </div>

                    <!-- Địa chỉ -->
                    <div class="md:col-span-2">
                        <label asp-for="Diachi" class="block text-sm font-medium text-gray-700 mb-1">Địa chỉ</label>
                        <textarea asp-for="Diachi" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"></textarea>
                        <span asp-validation-for="Diachi" class="text-red-500 text-sm mt-1"></span>
                    </div>

                    <!-- Ngày vào làm -->
                    <div>
                        <label asp-for="Ngayvaolam" class="block text-sm font-medium text-gray-700 mb-1">Ngày vào làm</label>
                        <input asp-for="Ngayvaolam" type="date" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" required />
                        <span asp-validation-for="Ngayvaolam" class="text-red-500 text-sm mt-1"></span>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="mt-8 flex items-center justify-end gap-4">
                    <a asp-action="Index" class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-800 transition-colors">
                        Quay lại
                    </a>
                    <button type="submit" class="px-6 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors">
                        Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
